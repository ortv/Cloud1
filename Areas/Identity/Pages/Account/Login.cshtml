@model LoginModel
<link href="~/css/login.css" rel="stylesheet" />


<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  
    <link rel="stylesheet" href="path/to/login-style.css">
</head>

<body>
    <div class="wrapper">
        <a href="@Url.Action("Index", "Home")" class="home-button">Home</a>
        <div class="title">
            Login Form
        </div>
        <form asp-controller="Admin" asp-action="Index" method="post">
            <div class="field">
                <input asp-for="Input.Email" required>
                <label asp-for="Input.Email">Email Address</label>
            </div>
            <div class="field">
                <input asp-for="Input.Password" required>
                <label asp-for="Input.Password">Password</label>
            </div>
            <div class="content">
                <div class="checkbox">
                    <input asp-for="Input.RememberMe" id="remember-me" type="checkbox">
                    <label for="remember-me">Remember me</label>
                </div>
                <div class="pass-link">
                    <a asp-page="./ForgotPassword">Forgot password?</a>
                </div>
            </div>
            <div class="field">
                <input type="submit" value="Login">
            </div>
            <div class="signup-link">
                Not a member? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Signup now</a>
            </div>
        </form>
    </div>




</body>

</html>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

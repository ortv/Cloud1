@model Cloud1.Models.CartView

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-ZMP7rVo3mIykV+2+9J3Uq6q9t8lPLO6Kc5I4LLuQ5brF5a5PM4P2pd5sO8fs5Bh5" crossorigin="anonymous">
    <title>Your Cart</title>
</head>
<body>
    <h2>Your Cart</h2>

    <div class="cart-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.Cream1.IceName</td>
                        <td>
@*                            <a href="@Url.Action("AddToCart", "CartItems", new { id = item.Cream1.Id, amount = 1 })"><i class="fas fa-plus"></i></a>
*@                            @item.Quantity
@*                            <a href="@Url.Action("RemoveFromCart", "CartItems", new { id = item.ItemId })"><i class="fas fa-minus"></i></a>
*@                        </td>
                        <td>@item.Price</td>
                        <td>@(item.Quantity * item.Price)</td>
                        <tr>
                        <a href="@Url.Action("AddToCart", "CartItems", new { id = item.Cream1.Id, amount = 1 })"><i class="fas fa-plus"></i></a>
                        </tr>
                        <td>
							
@*                                <a href="@Url.Action("AddToCart", "CartItems", new { id = item.Cream1.Id, amount = 1 })"> <i class="fas fa-plus"></i></a>
*@                           


@*                            <a href="@Url.Action("DeleteConfirmed", "CartItems", new { id = item.ItemId })"><i class="fas fa-trash"></i></a>
*@                      </td>
                    </tr>
                    <a href="@Url.Action("AddToCart", "CartItems", new { id = item.Cream1.Id, amount = 1 })"> <i class="fas fa-plus"></i></a>

                }
            </tbody>
        </table>

        <div class="cart-total">
            <h3>Total: @Model.Total().ToString("C")</h3>
        </div>

        <div class="checkout-button">
            <a href="@Url.Action("Checkout", "CartItems")" class="btn btn-primary">Checkout</a>
        </div>
    </div>
</body>
</html>


<!DOCTYPE html>
<html lang="en" style="background-color: black; color: white;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link href="~/css/stylesheet9.css" rel="stylesheet" />
    <title>Your Cart</title>

   
</head>
<body style="background-color: black; color: black;">

    <img id="corner-image" src="\assets\images\logo3.jpg" alt="Corner Image">
   
    <div class="container">
        <div class="row">
            <div class="col-xs-8">
                <div class="panel panel-info">
                    <div class="panel-heading" style="background-color: pink;">
                        <div class="panel-title text-center">
                            <div class="row">
                                <div class="col-xs-12">
                                    <h5 style="font-size: 2em;"><span class="glyphicon glyphicon-shopping-cart"></span>  Your Shopping Cart</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        @foreach (var item in Model.CartItems) // Assuming CartItems is the collection of items in your cart
                        {
                            <div class="row">
                                <div class="col-xs-2"><img class="img-responsive" src="@item.Cream1.imageUrl" alt="Ice Cream Image"></div>
                                <div class="col-xs-4">
                                    <h4 class="product-name">
                                        <strong>@item.Cream1.IceName</strong>
                                    </h4>
                                    <h4>
                                        <small><strong style="  font-size: 1.2em;">@item.Cream1.IceDescription</strong></small>
                                    </h4>
                                </div>
                                <div class="col-xs-6">
                                    <div class="col-xs-6 text-right">
                                        <h6><strong>@item.Price <span class="text-muted"></span>₪</strong></h6>
                                    </div>

                                    <div class="col-xs-4">
                                        <a class="addToCartButton" data-id="@item.Cream1.Id" data-amount="1">
                                            <i class="fas fa-plus"></i>
                                        </a>

                                        @item.Quantity

                                        <a class="deleteFromCart" data-id="@item.ItemId">
                                            <i class="fas fa-minus"></i>
                                        </a>


                                    </div>
                                    <div class="col-xs-2">
                                        <a class="removeAll" data-id="@item.ItemId">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="panel-footer">
                        <div class="row text-center">
                            <div class="col-xs-6">
                                <h4 class="text-center"><strong>Total: @Model.Total().ToString("C")</strong></h4>
                            </div>

                            <div class="col-xs-6">
                                <div class="checkout-button text-center pull-right">
                                    <a href="@Url.Action("Checkout", "CartItems")">
                                        <i class="fas fa-shopping-cart"></i> Checkout
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div>
                    <div class="options-container" style="margin-top: 20px;">
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/clc4TFk.jpg" alt="Option 1">
                            <input type="checkbox" id="option1" name="Options" value="15" onclick="updateTotalPrice(this)">

                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/Hi6FghU.jpg" alt="Option 4">
                            <input type="checkbox" id="option4" name="Options" value="15" onclick="updateTotalPrice(this)">

                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/jlhHyGo.jpg" alt="Option 5">
                            <input type="checkbox" id="option5" name="Options" value="15" onclick="updateTotalPrice(this)">

                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/W6tOQJK.jpg" alt="Option 6">
                            <input type="checkbox" id="option6" name="Options" value="15" onclick="updateTotalPrice(this)">

                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/ZOBH98w.jpg" alt="Option 7">
                            <input type="checkbox" id="option7" name="Options" value="15" onclick="updateTotalPrice(this)">
                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/TWKArvH.jpg" alt="Option 7">
                            <input type="checkbox" id="option7" name="Options" value="15" onclick="updateTotalPrice(this)">
                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/9ngVgKo.jpg" alt="Option 7">
                            <input type="checkbox" id="option7" name="Options" value="15" onclick="updateTotalPrice(this)">
                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/OjC5wnF.jpg" alt="Option 7">
                            <input type="checkbox" id="option7" name="Options" value="15" onclick="updateTotalPrice(this)">
                        </div>


                        <!-- Repeat the above block for other options -->
                    </div>
                </div>
                <div class="col-xs-3" style="margin-top: 20px;">
                    <div class="text-center">
                        <a href="@Url.Action("Product", "Home")" class="btn btn-primary"> Forgot something?</a>
                    </div>
                </div>

            </div>
        </div>
    </div>






    <script>
        document.querySelectorAll('.addToCartButton').forEach(button => {
            button.addEventListener('click', addToCart);
        });

        function addToCart(event) {
            const id = event.currentTarget.dataset.id;
            const amount = event.currentTarget.dataset.amount;

            fetch(`/CartItems/AddToCart?id=${id}&amount=${amount}`, {
                method: 'POST',
            })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        console.error('Failed to add item to cart');
                    }
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                });
        }
    </script>

    <script>
        document.querySelectorAll('.deleteFromCart').forEach(button => {
            button.addEventListener('click', deleteItemCart);
        });

        function deleteItemCart(event) {
            const id = event.currentTarget.dataset.id;

            fetch(`/CartItems/RemoveFromCart?id=${id}`, {
                method: 'POST',
            })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        console.error('Failed to remove item from cart');
                    }
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                });
        }
    </script>

    <script>
        document.querySelectorAll('.removeAll').forEach(button => {
            button.addEventListener('click', removeAllItems);
        });

        function removeAllItems(event) {
            const id = event.currentTarget.dataset.id;

            fetch(`/CartItems/RemoveFromCart2?id=${id}`, {
                method: 'POST',
            })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        console.error('Failed to delete items from cart');
                    }
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                });
        }
    </script>
</body>
</html>
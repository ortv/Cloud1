@model Cloud1.Models.CartView

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha384-ZMP7rVo3mIykV+2+9J3Uq6q9t8lPLO6Kc5I4LLuQ5brF5a5PM4P2pd5sO8fs5Bh5" crossorigin="anonymous"> *@
	<link href="~/css/stylesheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>


    <title>Your Cart</title>
    
</head>
<body>
    <h2>Your Cart</h2>

    <div class="cart-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                    <tr>
                        <td>@item.Cream1.IceName</td>
                        <td>
                            <a class="addToCartButton" data-id="@item.Cream1.Id" data-amount="1">
                                <i class="fas fa-plus"></i>
                            </a>
                            
                                @item.Quantity
                            <a class="deleteFromCart" data-id="@item.ItemId"> <i class="fas fa-minus"></i></a>
                        </td>
                        <td>@item.Price</td>
                        <td>
                            <a class="removeAll" data-id="@item.ItemId"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    }
            </tbody>
        </table>

        <div class="cart-total">
            <h3>Total: @Model.Total().ToString("C")</h3>
        </div>

        <div class="checkout-button">
            <a href="@Url.Action("Checkout", "CartItems")">Checkout</a>
        </div>
    </div>
    <script>
        document.querySelectorAll('.addToCartButton').forEach(button => {
            button.addEventListener('click', addToCart);
        });

        function addToCart(event) {
            const id = event.currentTarget.dataset.id;
            const amount = event.currentTarget.dataset.amount;

            // Fetch API to submit the form asynchronously
            fetch(`/CartItems/AddToCart?id=${id}&amount=${amount}`, {
                method: 'POST',
                // body: new FormData(document.getElementById('addToCartForm')),
            })
                .then(response => {
                    if (response.ok) {
                        // Optionally, update the UI to reflect the added item without reloading the page
                        location.reload(); // Refresh the page

                    } else {
                        // Handle error if needed
                        console.error('Failed to add item to cart');
                    }
                })
                .catch(error => {
                    // Handle fetch error if needed
                    console.error('Fetch error:', error);
                });
        }

    </script>

    <script>
        document.querySelectorAll('.deleteFromCart').forEach(button => {
            button.addEventListener('click', deleteItemCart);
        });

        function deleteItemCart(event) {
            const id = event.currentTarget.dataset.id;

            // Fetch API to submit the form asynchronously
            fetch(`/CartItems/RemoveFromCart?id=${id}`, {
                method: 'POST',
                // body: new FormData(document.getElementById('addToCartForm')),
            })
                .then(response => {
                    if (response.ok) {
                        location.reload(); // Refresh the page

                    } else {
                        // Handle error if needed
                        console.error('Failed to remove item from cart');
                    }
                })
                .catch(error => {
                    // Handle fetch error if needed
                    console.error('Fetch error:', error);
                });
        }

    </script>

    <script>
        document.querySelectorAll('.removeAll').forEach(button => {
            button.addEventListener('click', removeAllItems);
        });

        function removeAllItems(event) {
            const id = event.currentTarget.dataset.id;

            // Fetch API to submit the form asynchronously
            fetch(`/CartItems/RemoveFromCart2?id=${id}`, {
                method: 'POST',
                // body: new FormData(document.getElementById('addToCartForm')),
            })
                .then(response => {
                    if (response.ok) {
                        location.reload(); // Refresh the page

                    } else {
                        // Handle error if needed
                        console.error('Failed to delete items from cart');
                    }
                })
                .catch(error => {
                    // Handle fetch error if needed
                    console.error('Fetch error:', error);
                });
        }

    </script>
</body>
 
</html>

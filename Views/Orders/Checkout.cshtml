@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #000; /* Black background */
        color: #fff; /* White text */
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    form {
        background-color: #111; /* Dark background */
        border-radius: 15px;
        padding: 15px; /* Smaller padding */
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1); /* White shadow */
        width: 70%; /* Adjust the width of the form */
    }

    label {
        font-size: 14px; /* Smaller font size */
        display: block;
        margin-bottom: 6px; /* Smaller margin */
        color: #fff; /* White text */
    }

    input[type="text"],
    input[type="email"] {
        width: 100%;
        padding: 6px; /* Smaller padding */
        margin-bottom: 10px; /* Smaller margin */
        border: 1px solid #777; /* Light gray border */
        border-radius: 8px;
        box-sizing: border-box;
        background-color: #222; /* Darker background */
        color: #fff; /* White text */
    }

    input[type="checkbox"] {
        margin-right: 6px; /* Smaller margin */
    }

    .coupon-container {
        display: flex;
        align-items: center;
        margin-bottom: 10px; /* Smaller margin */
    }

    button {
        background-color: #ff6eff; /* Pink button */
        color: #000; /* Black text */
        padding: 8px 12px; /* Smaller padding */
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px; /* Smaller font size */
    }

    button:hover {
        background-color: #ff3eff; /* Lighter pink on hover */
    }

    .option-label {
        display: inline-block;
        margin: 8px; /* Smaller margin */
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

    .option-label:hover {
        transform: scale(1.1);
    }

    .option-img {
        width: 120px; /* Larger image size */
        height: 120px; /* Larger image size */
        object-fit: cover;
        border-radius: 15px;
    }

    #CouponResult {
        font-size: 12px; /* Smaller font size */
        margin-top: 6px; /* Smaller margin */
        color: #6effff; /* Light blue */
    }

    #NameError,
    #AddressError,
    #CityError,
    #EmailError {
        font-size: 12px; /* Smaller font size */
        margin-top: 6px; /* Smaller margin */
        color: #ff3eff; /* Light pink */
    }

    .text-danger {
        color: #ff3eff; /* Light pink */
        font-size: 12px; /* Smaller font size */
    }
</style>

<form method="post" action="/Orders/Update" onsubmit="return validateForm()">
    <div>
        <label for="OrderDate">Order Date:</label>
        <input type="text" id="OrderDate" name="OrderDate" value="@Model.OrderDate" readonly />
    </div>
    <div>
        <label for="TotalPrice">Total Price:</label>
        <input type="text" id="TotalPrice" name="TotalPrice" value="@Model.TotalPrice" readonly />
    </div>
    <div>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" />
        <span id="NameError"></span>
    </div>
    <div>
        <label for="Address">Address:</label>
        <input type="text" id="Address" name="Address" value="@Model.Address" />
        <span id="AddressError"></span>
        <div>
            @Html.ValidationMessage("Address", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        <label for="City">City:</label>
        <input type="text" id="City" name="City" value="@Model.City" />
        <span id="CityError"></span>
    </div>
    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" value="@Model.Email" required />
        <span id="EmailError"></span>
    </div>

    <div class="coupon-container">
        <label for="Coupon">Coupon:</label>
        <input type="text" id="Coupon" name="Coupon" />
        <button type="button" id="applyCouponButton" onclick="applyCoupon(@Model.TotalPrice)">Apply Coupon</button>
    </div>

    <span id="CouponResult"></span>

    <button type="submit" id="orderButton">Pay Now</button>
</form>


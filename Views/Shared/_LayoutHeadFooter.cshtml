    <style>

        hr {
            border-color: black;
        }
        /* סלקטור לשניות צבע הכיתוב וגודל הגופן */
        header.header-area {
            background-color: white;
            color: white; /* כיתוב לבן */
        }

            header.header-area .main-nav ul.nav li a {
                font-size: 24px; /* גודל גופן גדול יותר */
            }

     
        /* סלקטור לפלקסבוקס שמתיישב בין הלוגו והלחצנים */
        header.header-area .main-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: white;
            color: white;
            border-bottom: none;
        }

        /* סלקטור ללוגו - מרווח ומשנה את הגודל */
        header.header-area .main-nav .logo img {
            margin-right: 20px;
            width: 100px; /* גודל הלוגו */
        }

        /* סלקטור לכל הלחצנים בתפריט - מרווח ביניהם ומשנה את הגודל */
        header.header-area .main-nav ul.nav li {
            margin-right: 20px; /* מרווח בין הלחצנים */
        }

        footer {
            background-color: black;
        }

    </style>
</head>
<body>
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                      
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="scroll-to-section"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="scroll-to-section"><a href="@Url.Action("About", "Home")">About Us</a></li>
                            <li class="scroll-to-section"><a href="@Url.Action("Product", "Home")">Products</a></li>

                          
                             <!-- ***** Logo Start ***** -->
                            <a href="index.html" class="logo">
                                <img src="~/assets/images/logo3.ico" alt="logo">
                            </a>
                            <!-- ***** Logo End ***** --> 
                            <li class="scroll-to-section"><a href="@Url.Action("Contact", "Home")">Contact Us</a></li>
                            <li class="scroll-to-section"><a href="/Identity/Account/Login">Login</a></li>
                            <li><a href="@Url.Action("Index", "CartItems")"><i class="fa fa-shopping-cart" ></i> Cart</a></li>



                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    <!-- ***** Page Content ***** -->
    <div>
        @RenderBody()
    </div>

<h1>Index</h1>

<p style="text-align: center; padding: 20px; font-size: 18px;">
    <a asp-action="Create" class="action-buttons">יצירת טעם חדש</a>
    <a asp-controller="Admin" asp-action="PageMeng" class="action-buttons">עמוד ראשי</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IceDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IceDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.imageUrl)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isAvailable)
                </td>
                <td class="action-buttons">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
@section scripts{
    <script>
        $(function () {
            $("#explore").click(function () {
                // קוד נוסף אם יש צורך

                // שליחת הטופס
                $("form")[0].submit();
            });
        });
    </script>

    
}

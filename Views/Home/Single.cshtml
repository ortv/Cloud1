@{
    Layout = "~/Views/Shared/_LayoutHeadFooter.cshtml";
}
@model Cloud1.Models.IceCream1

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <title>Hexashop - Product Listing Page</title>

    <!-- Additional CSS Files -->
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.css">
    <link rel="stylesheet" href="/assets/css/templatemo-hexashop.css">
    <link rel="stylesheet" href="/assets/css/owl-carousel.css">
    <link rel="stylesheet" href="/assets/css/lightbox.css">
    <!--

    TemplateMo 571 Hexashop

    https://templatemo.com/tm-571-hexashop

    -->
    <style>
        .product-details {
            text-align: center;
        }

        .product-image-container {
            max-width: 100%;
            margin-bottom: 20px;
        }

        .product-image {
            max-width: 100%;
            margin: 0 auto 20px;
            display: block;
            border-radius: 10px; /* Adjust the value based on your preference */
        }


        .product-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .product-description {
            font-size: 18px;
            margin-bottom: 20px;
        }
          .product-description {
        font-size: 18px; /* Adjust the value based on your preference */
        margin-bottom: 20px;
    }

        .product-price {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .add-to-cart-btn {
            font-size: 20px;
            padding: 15px 30px;
            display: block;
            margin: 0 auto; 
            background-color: lightpink;
        }

            .add-to-cart-btn:hover {
                background-color: hotpink;
            }

        .product-image {
            width: 600px; /* Set a fixed width based on your preference */
            height: 500px; /* Set a fixed height based on your preference */
            object-fit: cover; /* Maintain aspect ratio and cover the entire container */
            margin: 0 auto 20px;
            display: block;
            border-radius: 10px;
        }

    </style>
</head>

<body style="background-color: black; color: white;">

    <section class="section" id="products">
        <div class="container text-center my-4">
            <!-- Add margin using Bootstrap utility classes -->
            <div class="row">
                <section class="section" id="products">
                    <div class="container text-center">
                        <div class="row">
                            <div class="col-lg-12 product-details">
                                <div class="inner-content">
                                    <h2>@Model.IceName</h2>
                                   
                                </div>
                            </div>
                            <div class="col-lg-6 mx-auto product-details d-flex flex-column align-items-center">
                                <div class="product-image-container">
                                    <img src="../../@Model.imageUrl" alt="Product Image" class="product-image" />
                                </div>
                                <div>
                                    <span>@Model.IceDescription</span>
                                </div>
                                <div class="product-price">Price: @Model.Price.ToString("C")</div>

                               
                                <form id="addToCartForm" asp-controller="CartItems" asp-action="AddToCart" method="post">
                                    <!-- Hidden input field for 'id' parameter -->
                                    <input type="hidden" name="id" value="@Model.Id">
                                    <!-- Hidden input field for 'amount' parameter -->
                                    <input type="hidden" name="amount" value="1">
                                    <button type="button" class="btn btn-primary add-to-cart-btn" onclick="addToCart()">Add to Cart</button>

                                </form>

                                <div id="successMessage" style="display: none; position: fixed; top: 0; left: 0; width: 100%; background-color: #4CAF50; color: white; text-align: center; padding: 10px; z-index: 1000;">
                                    Success! Item added to the cart.
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
   
    <!-- Product area starts -->
   

    <!-- Product area ends -->
    <!-- Rest of your scripts and styles -->


 
    <!-- jQuery -->
    <script src="/assets/js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="/assets/js/popper.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="/assets/js/owl-carousel.js"></script>
    <script src="/assets/js/accordions.js"></script>
    <script src="/assets/js/datepicker.js"></script>
    <script src="/assets/js/scrollreveal.min.js"></script>
    <script src="/assets/js/waypoints.min.js"></script>
    <script src="/assets/js/jquery.counterup.min.js"></script>
    <script src="/assets/js/imgfix.min.js"></script>
    <script src="/assets/js/slick.js"></script>
    <script src="/assets/js/lightbox.js"></script>
    <script src="/assets/js/isotope.js"></script>

    <!-- Global Init -->
    <script src="assets/js/custom.js"></script>

    <script>
        $(function () {
            var selectedClass = "";
            $("p").click(function () {
                selectedClass = $(this).attr("data-rel");
                $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("." + selectedClass).fadeOut();
                setTimeout(function () {
                    $("." + selectedClass).fadeIn();
                    $("#portfolio").fadeTo(50, 1);
                }, 500);
            });
        });

        function addToCart() {
            // Fetch API to submit the form asynchronously
            fetch('/CartItems/AddToCart', {
                method: 'POST',
                body: new FormData(document.getElementById('addToCartForm')),
            })
                .then(response => {
                    if (response.ok) {
                        // Display success message
                        document.getElementById('successMessage').style.display = 'block';

                        // Hide the message after 6 seconds
                        setTimeout(() => {
                            document.getElementById('successMessage').style.display = 'none';
                        }, 6000); // Display for 6 seconds (6000 milliseconds)

                        // Redirect to the previous page after a delay (e.g., 2 seconds)
                        setTimeout(() => {
                            window.history.back();
                        }, 2000); // Adjust the delay as needed
                    } else {
                        // Handle error if needed
                        console.error('Failed to add item to cart');
                    }
                })
                .catch(error => {
                    // Handle fetch error if needed
                    console.error('Fetch error:', error);
                });
        }
    </script>

</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <title>Hexashop - Product Listing Page</title>

    <!-- Additional CSS Files -->
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.css">
    <link rel="stylesheet" href="/assets/css/templatemo-hexashop.css">
    <link rel="stylesheet" href="/assets/css/owl-carousel.css">
    <link rel="stylesheet" href="/assets/css/lightbox.css">
    <link href="~/css/stylesheet1.css" rel="stylesheet" />
    <!-- Template styles -->
    <style>
        .product-title {
            font-size: 27px;
            font-weight: bold;
            margin-bottom: 30px; /* הוסף כל ערך שתבחר */
        }

        .product-details h2 {
            margin-bottom: 20px;
        }

        .product-details {
            text-align: center;
        }

        .product-image-container {
            max-width: 100%;
            margin-bottom: 20px;
        }



        .product-image {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
            margin: 0 auto 20px;
            display: block;
            border-radius: 10px;
        }

        

        .product-price {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .add-to-cart-btn {
            font-size: 20px;
            padding: 15px 30px;
            display: block;
            margin: 0 auto;
            background-color: lightpink;
            border: none; /* Remove the button border */
        }

            .add-to-cart-btn:hover {
                background-color: #FFB6C1; /* Change the hover background color to lightpink */
                border: none; /* Remove the button border on hover */
            }

        .product-image {
            width: 500px; /* Set a fixed width based on your preference */
            height: 400px; /* Set a fixed height based on your preference */
            object-fit: cover; /* Maintain aspect ratio and cover the entire container */
            margin: 0 auto 20px;
            display: block;
            border-radius: 10px;
        }

        #errorMessage {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #FF5733;
            color: white;
            text-align: center;
            padding: 10px;
            z-index: 1000;
        }




        body {
            background-color: #080710;
        }

        .background {
            width: 430px;
            height: 520px;
            position: absolute;
            transform: translate(-50%,-50%);
            left: 50%;
            top: 50%;
        }

            .background .shape {
                height: 200px;
                width: 200px;
                position: absolute;
                border-radius: 50%;
            }

        .shape:first-child {
            background: linear-gradient(lightpink, deeppink);
            left: -30px; /* הורזונטלית - ימין או שמאל */
            top: -30px; /* אנכית - למעלה או למטה */
            transform: translate(-20px, -10px); /* תזוזה בשני הצירים */
        }

        .shape:last-child {
            background: linear-gradient(to right, pink, hotpink);
            right: -30px;
            bottom: 30px;
            width: 150px; /* קובע רוחב */
            height: 150px; /* קובע גובה */
            transform: translate(30px, -20px);
        }




    </style>
</head>

<body style="background-color: black; color: white;">


    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

  
    <section class="section" id="products">
        <div class="container text-center my-4">
            <div class="row">
                <div class="col-lg-12 product-details">
                    <div class="inner-content">
                        <h2>@Model.IceName</h2>
                    </div>
                </div>
                <div class="col-lg-6 mx-auto product-details d-flex flex-column align-items-center">
                    <div class="product-image-container">
                        <img src="@Model.imageUrl" alt="Product Image" class="product-image" />

                    </div>
                    <div>
                        <span style=" font-size: 22px; ">@Model.IceDescription</span>
                        <div class="product-price"> @Model.Price.ToString("C")</div>
                    </div>

                    <div class="options-container">
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/9ngVgKo.jpg" alt="Option 1">
                            <input type="checkbox" id="option1" name="Options" value="15" onclick="updateTotalPrice(this)">

                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/cyKglcr.jpg" alt="Option 4">
                            <input type="checkbox" id="option4" name="Options" value="15" onclick="updateTotalPrice(this)">

                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/OjC5wnF.jpg" alt="Option 5">
                            <input type="checkbox" id="option5" name="Options" value="15" onclick="updateTotalPrice(this)">

                        </div>
                        <div class="option-label">
                            <img class="option-img" src="https://i.imgur.com/TWKArvH.jpg" alt="Option 6">
                            <input type="checkbox" id="option6" name="Options" value="15" onclick="updateTotalPrice(this)">

                        </div>
                        <!-- Repeat the above block for other options -->
                    </div>

                 @*    <div>
                        <span style=" font-size: 22px; ">@Model.IceDescription</span>
                    </div> *@
                   @*  <div class="product-price"> @Model.Price.ToString("C")</div> *@

                    <form id="addToCartForm" asp-controller="CartItems" asp-action="AddToCart" method="post">
                        <input type="hidden" name="id" value="@Model.Id">
                        <input type="hidden" name="amount" value="1">
                        <button type="button" class="btn btn-primary add-to-cart-btn" onclick="addToCart()">Add to Cart</button>

                    </form>

                    
                    <div id="successMessage" style="display: none; position: fixed; top: 0; left: 0; width: 100%; background-color: #4CAF50; color: white; text-align: center; padding: 10px; z-index: 1000;">
                        Success! Item added to the cart.
                    </div>


                    <div id="errorMessage">Error! You can only add up to 5 products to the cart.</div>
                </div>
                
            </div>
        </div>
    </section>

    <!-- Your existing script references -->
    <!-- Your existing HTML code -->

    <script>
        function addToCart() {
            // ... (existing code remains the same)
            fetch('/CartItems/AddToCart', {
                method: 'POST',
                body: new FormData(document.getElementById('addToCartForm')),
            })
                .then(response => response.json()) // Parse the response as JSON
                .then(data => {
                    if (data.success) {
                        // Update the cart count dynamically
                        updateCartCount(data.cartCount);

                        // Display success message
                        document.getElementById('successMessage').style.display = 'block';
                        setTimeout(() => {
                            document.getElementById('successMessage').style.display = 'none';
                        }, 6000);
                        setTimeout(() => {
                            window.history.back();
                        }, 2000);
                    } else {
                        // Display error message
                        document.getElementById('errorMessage').innerText = data.message;
                        document.getElementById('errorMessage').style.display = 'block';
                        setTimeout(() => {
                            document.getElementById('errorMessage').style.display = 'none';
                        }, 6000);
                        setTimeout(() => {
                            window.history.back();
                        }, 2000);
                    }
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                });
        }
    </script>
    <script>
        function updateCartCount(count) {
            // Update the cart count in your layout
            document.querySelector('.cart-icon p').innerText = count;
        }
    </script>


@{
    Layout = "~/Views/Shared/_LayoutHeadFooter.cshtml";
}

<!DOCTYPE html>
<html lang="en" style="background-color: black; color: white;">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <title>Hexashop - Product Listing Page</title>

    <!-- Additional CSS Files -->
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.css">
    <link rel="stylesheet" href="/assets/css/templatemo-hexashop.css">
    <link rel="stylesheet" href="/assets/css/owl-carousel.css">
    <link rel="stylesheet" href="/assets/css/lightbox.css">
    <link href="~/assets/css/template.css" rel="stylesheet" />
    <style>


        body {
            /* או כל גוון שתרצה */
        }

        .item {
            border-radius: 50%;
            overflow: hidden;
            position: relative;
            text-align: center;
        }

            .item img {
                width: 100%;
                height: auto;
                border-radius: 50%;
                display: block;
            }

        .down-content {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(255, 255, 255, 0.8);
            padding: 10px;
            border-radius: 5px;
            width: 80%;
        }


        :root {
            --background: #000000;
            --background-border: hotpink;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Poppins;
            height: 100vh;
            padding: 32px;
            display: grid;
            place-items: center;
            background-color: var(--background);
        }

        .gallery {
            display: flex;
            background-color: var(--background);
            gap: 16px;
            scale: 1.6;
            grid-gap: 20px; /* מרווח בין המוצרים */
            display: grid;
            grid-template-columns: repeat(5, 1fr); /* 5 עמודות בכל שורה */
            grid-gap: 20px; /* מרווח בין המוצרים */
        }

        .card {
            position: relative;
            width: 140px;
            height: 160px;
            background-color: var(--background);
            border-radius: 8px;
            transition: 1000ms all;
            transform-origin: center left;
            box-shadow: 0 5px 12px rgba(0, 0, 0, 0.5);
            outline: 1px solid var(--background);
            overflow: hidden;
            margin: 10px;
        }



            .card img {
                height: 160px;
                object-fit: cover;
                border-radius: 4px;
            }

            .card:hover {
                cursor: pointer;
                transform: scale(1.15);
               
                margin: 5px;
            }



                .card:hover ~ .card {
                    font-weight: bold;
                    cursor: pointer;
                    transform: translateX(22px);
                }

        .product-info {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            text-align: center;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0) 100%);
            color: white;
            padding: 5px;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
            opacity: 0;
            transition: opacity 0.5s;
        }

        .card:hover .product-info {
            opacity: 1;
        }
    </style>
</head>

<body>

    <div id="top">
        <!-- Embedding a video with autoplay and muted for background -->

        <div class="video-container" style="background-color: black; color: white;">
            <video class="w-100" autoplay loop muted>
                <source src="/assets/images/PROD1.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>

    </div>


    <!-- Products Section Start -->
    <section class="section" id="products">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Our Latest Flavors</h2>
                        <span>Check out all of our Flavours.</span>
                    </div>
                </div>
              
            </div>

            <div class="gallery">
                @foreach (var product in Model)
                {
                    <article class="card">
                        <figure>
                            <a href="@Url.Action("Single", "Home", new { id = product.Id })">
                                <img src="@product.imageUrl" alt=" " />
                            </a>
                        </figure>
                        <div class="product-info">
                            <h3>@product.IceName</h3>
                            <p>₪@product.Price</p>
                        </div>
                    </article>
                }
            </div>







        </div>
    </section>
    <!-- Products Section End -->
    <!-- jQuery -->
    <script src="assets/js/jquery-2.1.0.min.js"></script>
    <!-- Bootstrap -->
    <script src="assets/js/popper.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="/assets/js/owl-carousel.js"></script>
    <script src="/assets/js/accordions.js"></script>
    <script src="/assets/js/datepicker.js"></script>
    <script src="/assets/js/scrollreveal.min.js"></script>
    <script src="/assets/js/waypoints.min.js"></script>
    <script src="/assets/js/jquery.counterup.min.js"></script>
    <script src="/assets/js/imgfix.min.js"></script>
    <script src="/assets/js/slick.js"></script>
    <script src="/assets/js/lightbox.js"></script>
    <script src="/assets/js/isotope.js"></script>

    <!-- Global Init -->
    <script src="assets/js/custom.js"></script>

    <script>
        $(function () {
            var selectedClass = "";
            $("p").click(function () {
                selectedClass = $(this).attr("data-rel");
                $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("." + selectedClass).fadeOut();
                setTimeout(function () {
                    $("." + selectedClass).fadeIn();
                    $("#portfolio").fadeTo(50, 1);
                }, 500);
            });
        });
    </script>

</body>

</html>

@model Cloud1.Models.IceCream1

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="~/css/size.css" rel="stylesheet" />
    <style>
        /* Add your custom styles here */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #1c1c1c; /* Black background */
            color: #ff6eff; /* Purple Rose text color */
        }

        .options-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .option-label {
            text-align: center;
            position: relative;
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
            cursor: pointer;
            background-color: #2b2b2b; /* Darker black background */
        }

            .option-label:hover {
                transform: scale(1.1);
            }

        .option-img {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 15px;
            border: 2px solid #ff6eff; /* Purple Rose border */
        }

        input[type="checkbox"] {
            margin-right: 6px;
            width: 30px;
            height: 30px;
            transform: scale(2);
        }

            input[type="checkbox"]:before {
                content: '\2713';
                display: inline-block;
                font-size: 20px;
                line-height: 30px;
                color: #ff6eff;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                opacity: 0;
                transition: opacity 0.3s ease-in-out;
            }

            input[type="checkbox"]:checked:before {
                opacity: 1;
            }

        label {
            color: #ff6eff; /* Purple Rose text color for the label */
        }
    </style>
</head>

<body>
    <label>Choose size:</label>
    <div class="options-container">
        <div class="option-label">
            <img class="option-img" src="~/assets/images/gavia.JPG" alt="Option 1">
            <input type="checkbox" id="option1" name="Options" value="15" onclick="updateTotalPrice(this)">
            <p>‫מארז גביעים - 3 יח' </p>
        </div>
        <div class="option-label">
            <img class="option-img" src="~/assets/images/kilo.JPG" alt="Option 4">
            <input type="checkbox" id="option4" name="Options" value="15" onclick="updateTotalPrice(this)">
            <p>קילו גלידה-5 טעמים</p>
        </div>
        <div class="option-label">
            <img class="option-img" src="~/assets/images/half.JPG" alt="Option 5">
            <input type="checkbox" id="option5" name="Options" value="15" onclick="updateTotalPrice(this)">
            <p>חצי קילו גלידה-3 טעמים</p>
        </div>
        <div class="option-label">
            <img class="option-img" src="~/assets/images/reva.jpg" alt="Option 6">
            <input type="checkbox" id="option6" name="Options" value="15" onclick="updateTotalPrice(this)">
            <p>רבע קילו-2 טעמים</p>
        </div>
        <!-- Repeat the above block for other options -->
    </div>

    <!-- Include your JavaScript function definition here -->
</body>

</html>

@model Cloud1.Models.IceCream1

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="~/css/size.css" rel="stylesheet" />
    <style>
        /* Add your custom styles here */
        body {
            font-family: 'Poppins', sans-serif;
        }

        .options-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .option-label {
            text-align: center;
            position: relative;
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
            cursor: pointer;
        }

            .option-label:hover {
                transform: scale(1.1);
            }

        .option-img {
            width: 200px; /* Larger image size */
            height: 200px; /* Larger image size */
            object-fit: cover;
            border-radius: 15px;
            border: 2px solid #fff; /* White border */
        }

        /* Larger checkboxes */
        input[type="checkbox"] {
            margin-right: 6px; /* Smaller margin */
            width: 30px; /* Larger size */
            height: 30px; /* Larger size */
            transform: scale(2); /* Larger size */
        }

            /* Add decorative styles to the checkboxes */
            input[type="checkbox"]:before {
                content: '\2713'; /* Checkmark character */
                display: inline-block;
                font-size: 20px; /* Adjust the checkmark size */
                line-height: 30px; /* Center the checkmark vertically */
                color: #ff6eff; /* Pink color for the checkmark */
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                opacity: 0; /* Initially hidden */
                transition: opacity 0.3s ease-in-out;
            }

            /* Show the checkmark when the checkbox is checked */
            input[type="checkbox"]:checked:before {
                opacity: 1;
            }
    </style>
</head>

<body>
    <label>Choose size:</label>
    <div class="options-container">
        <label class="option-label" for="option1">
            <img class="option-img" src="~/assets/images/gavia.JPG" alt="Option 1">
            <input type="checkbox" id="option1" name="Options" value="15" onclick="updateTotalPrice(this)">
        </label>
        <label class="option-label" for="option4">
            <img class="option-img" src="~/assets/images/kilo.JPG" alt="Option 4">
            <input type="checkbox" id="option4" name="Options" value="15" onclick="updateTotalPrice(this)">
        </label>
        <label class="option-label" for="option5">
            <img class="option-img" src="~/assets/images/reva.JPG" alt="Option 5">
            <input type="checkbox" id="option5" name="Options" value="15" onclick="updateTotalPrice(this)">
        </label>
        <label class="option-label" for="option6">
            <img class="option-img" src="~/assets/images/half.jpg" alt="Option 6">
            <input type="checkbox" id="option6" name="Options" value="15" onclick="updateTotalPrice(this)">
        </label>

        <!-- Repeat the above block for other options -->
    </div>

    <!-- Include your JavaScript function definition here -->
</body>

</html>
